{
	"name": "tanstack-db-surrealdb",
	"description": "Add Offline / Local First Caching & Syncing to your SurrealDB app with TanstackDB and Loro (CRDTs)",
	"version": "0.1.0",
	"files": [
		"dist"
	],
	"module": "./dist/index.mjs",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"keywords": [
		"surrealdb",
		"tanstackdb",
		"crdts",
		"sync",
		"local-first"
	],
	"author": {
		"name": "Chiru Boggavarapu",
		"email": "chiru@foretag.co"
	},
	"scripts": {
		"build": "bunup --exports --format esm,cjs"
	},
	"dependencies": {
		"@tanstack/db": "^0.4.3",
		"loro-crdt": "^1.8.1",
		"surrealdb": "2.0.0-alpha.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"bunup": "^0.14.11"
	}
}
